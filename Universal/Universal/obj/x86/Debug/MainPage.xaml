<Page
    x:Class="Universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:ConnectionId='2' x:Name="MainStack" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image x:ConnectionId='3' x:Name="Image" Width= "300" Height = "200" Source="/Assets/Lotto.jpg" Opacity="0.5" >
            </Image>

            <StackPanel x:ConnectionId='4' x:Name="Controls" Orientation ="Vertical" VerticalAlignment="Center">
                <StackPanel x:ConnectionId='5' x:Name="Labels" Orientation="Horizontal">
                    <TextBlock x:ConnectionId='9' x:Name="textBlock1" Text=" ..." Width=" 20" Margin="15"/>
                    <TextBlock x:ConnectionId='10' x:Name="textBlock2" Text=" ..." Width=" 20" Margin="15"/>
                    <TextBlock x:ConnectionId='11' x:Name="textBlock3" Text=" ..." Width=" 20" Margin="15"/>
                    <TextBlock x:ConnectionId='12' x:Name="textBlock4" Text=" ..." Width=" 20" Margin="15"/>
                    <TextBlock x:ConnectionId='13' x:Name="textBlock5" Text=" ..." Width=" 20" Margin="15"/>
                    <TextBlock x:ConnectionId='14' x:Name="textBlock6" Text=" ..." Width=" 20" Margin="15"/>

                </StackPanel>

                <StackPanel x:ConnectionId='6' x:Name="Buttons" Orientation="Horizontal">
                    <Button x:ConnectionId='7' x:Name="BtnPick" Content="Get My Lucky Numbers" Margin="15" IsEnabled="True"                      />
                    <Button x:ConnectionId='8' x:Name="BtnReset" Content="Reset" IsEnabled="False"                       />



                </StackPanel>
            </StackPanel>

        </StackPanel>

    </Grid>
</Page>

